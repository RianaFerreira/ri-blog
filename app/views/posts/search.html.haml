= title 'Search Results'

.row
  .small-11.small-centered.columns
    %h2 Search Results
    - @results.each do |r|
      .row
        .small-8.small.columns
          %h4= link_to(r.title, post_path(r.id))
          %p
            %span= r.created_at.to_s(:long)
            - r.detail.each_line("\r\n") do |line|
              %p= line
          %p= cl_image_tag(r.images.first.url) if r.images.present?


        .small-3.small.columns
          %blockquote
            - r.tags.map do |t|
              %span.label= t.name
            %p= r.thought