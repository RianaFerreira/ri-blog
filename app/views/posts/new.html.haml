= title 'Adding Post'

%h1 New Ri-Blog Post

%section
  = form_for :post, url: posts_path do |f|
    - if @post.errors.any?
      #error_explanation
        %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
        %ul
        = @post.errors.full_messages.each do |msg|
          %li= msg
    %p
      = f.label :title
      = f.text_field :title
    %p
      = f.label :detail
      = f.text_area :detail
    %p
      = f.label :image
      = f.file_field :image
    %p
      = f.submit
  = link_to 'Abandon Post', posts_path